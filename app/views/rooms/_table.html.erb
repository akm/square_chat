<%- model_class = ::Room -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
    </tr>
  </thead>
  <tbody>
    <% rooms.each do |room| %>
      <tr>
        <td><%= link_to room.name, organization_room_path(room.organization, room) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
