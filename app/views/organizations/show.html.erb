<%- model_class = ::Organization -%>
<div class="page-header">
  <h1>
    <%= @organization.name %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organization_path(@organization), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organization_path(@organization),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  </h1>
</div>

<h2><%=t '.title', :default => Room.model_name.human.pluralize.titleize %></h2>

<%= render 'rooms/table', rooms: @rooms %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_organization_room_path(@organization),
            :class => 'btn btn-primary' %>


<h2><%=t '.title', :default => Membership.model_name.human.pluralize.titleize %></h2>

<%= render 'memberships/table', organization: @organization, memberships: @organization.memberships %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_organization_membership_path(@organization),
            :class => 'btn btn-primary' %>


